    "isbot": "^5.1.0",
    "prisma": "^6.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "devDependencies": {
    "@remix-run/eslint-config": "^2.15.3",
    "@remix-run/route-config": "^2.15.3",
    "@shopify/api-codegen-preset": "^1.1.4",
